{
  "private": true,
  "workspaces": [
    "pkg-tests-core",
    "pkg-tests-fixtures",
    "pkg-tests-pnp",
    "pkg-tests-specs"
  ],
  "dependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.66.0",
    "jest": "^23.0.0",
    "jest-junit": "^5.2.0",
    "prettier": "^1.10.2",
    "@snyk/protect": "latest"
  },
  "scripts": {
    "prettier": "prettier --write '**/*.js'",
    "prepare": "yarn run snyk-protect",
    "snyk-protect": "snyk-protect"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 120,
    "parser": "flow"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/pkg-tests-fixtures/packages/"
    ]
  },
  "snyk": true
}
